#include <stdio.h>
#include <stdlib.h>
//program to add two distance in inch-feet system
struct Distance
{
    int feet;
    float inch;
}d1,d2,sumOfDistance;

int main()
{
    printf("***Enter information for First Distance***\n");
    printf("Enter feet: ");
    scanf("%d", &d1.feet);
    printf("Enter inches: ");
    scanf("%.2f", &d1.inch);

    printf("\n***Enter information for Second Distance***\n");
    printf("Enter feet: ");
    scanf("%d", &d2.feet);
    //scanf("%d", &d2.feet);

    printf("Enter inches: ");
    scanf("%.2f", &d2.inch);

    sumOfDistance.feet = d1.feet + d2.feet;
    sumOfDistance.inch = d1.inch + d2.inch;

    printf("%d\n", sumOfDistance.feet);
    printf("%.2f\n", sumOfDistance.inch);
    getch();
    return 0;
}
