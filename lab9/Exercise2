#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>

int main()
{
    int var1 = 'h';
    if(isdigit(var1))
    {
        printf("var1 = |%c| is a digit\n", var1);
    }
    else if(isalpha(var1))
    {
        printf("var1 = |%c| is an alpha\n", var1);
    }
    else{
        printf("var1 = |%c| is not a digit\n", var1);
    }
    return 0;
}
