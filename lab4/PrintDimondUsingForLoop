#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i,j,k,space,row = 5;
    space = row-1;
    for(i=1;i<=row;i++){
        for(j=space; j>=1; j--){
            printf(" ");
        }
        for(k=1; k<=i;k++){
            printf("* ");
        }
        printf("\n");
        space--;
    }
    return 0;
}
