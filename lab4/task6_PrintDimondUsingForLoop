#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i,j,k,space,row;
    printf("Enter the rows: ");
    scanf("%d", &row);
    space = row-1;
    for(i=1;i<=row;i++){
        for(j=i; j<=row; j++){
            printf(" ");
        }
        for(k=1; k<=i;k++){
            printf("* ");
        }
    printf("\n");
    }
    return 0;
}
