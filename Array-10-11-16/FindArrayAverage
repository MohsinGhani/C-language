#include <stdio.h>
#include <stdlib.h>

int main()
{
    int arr[5];
    int i,j,avg,sum = 0;
    for(i=0;i<=4;i++)
    {
        printf("Enter the value at %d index: ",i);
        scanf("%d", &arr[i]);
    }
    for(j=0;j<=4;j++)
    {
        sum = sum + arr[j];
    }
    printf("The sum of Array is: %d\n", sum);
    avg = sum/5;
    printf("The Average is: %d", avg);
    return 0;
}
